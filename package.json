{
  "name": "@quantumhubstartup/ui-kit",
  "version": "0.1.1",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": "./dist/*"
  },
  "files": ["dist"],
  "scripts": {
    "clean": "rimraf dist",
    "build:js": "tsup src/index.ts --format esm --dts",
    "build:css": "postcss ./src/styles.css -o ./dist/styles.css",
    "dev:js": "tsup src/index.ts --format esm --dts --watch",
    "dev:css": "postcss ./src/styles.css -o ./dist/styles.css --watch",
    "dev:build": "bun run clean && bun run build:js && bun run build:css",
    "build": "bun run build",
    "dev": "concurrently \"bun run dev:js\" \"bun run dev:css\"",
    "setup": "bun run build && bun link",

    "deploy": "npm publish --access public"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "postcss-cli": "^11.0.1",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.12",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "clsx": "^2.1.1",
    "postcss": "^8.5.6"
  }
}
