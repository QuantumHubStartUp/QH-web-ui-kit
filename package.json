{
  "name": "@quantumhubstartup/ui-kit",
  "version": "0.1.1",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": "./dist/*"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build:js": "tsup src/index.ts --format esm --dts",
    "build:css": "postcss ./src/styles.css -o ./dist/styles.css",
    "dev:js": "tsup src/index.ts --format esm --dts --watch",
    "dev:css": "postcss ./src/styles.css -o ./dist/styles.css --watch",
    "dev:build": "bun run clean && bun run build:js && bun run build:css",
    "build": "bun run build",
    "dev": "concurrently \"bun run dev:js\" \"bun run dev:css\"",
    "setup": "bun run build && bun link",
    "deploy": "npm publish --access public",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@storybook/addon-a11y": "^9.1.7",
    "@storybook/addon-docs": "^9.1.7",
    "@storybook/addon-onboarding": "^9.1.7",
    "@storybook/addon-vitest": "^9.1.7",
    "@storybook/react-vite": "^9.1.7",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "playwright": "^1.55.1",
    "postcss-cli": "^11.0.1",
    "rimraf": "^6.0.1",
    "storybook": "^9.1.7",
    "tailwindcss": "^4.1.12",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "clsx": "^2.1.1",
    "postcss": "^8.5.6"
  }
}
